{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "max-len": ["error", {
      "code": 120
      }],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "flowtype",
      "react-hooks"
    ]
  }
